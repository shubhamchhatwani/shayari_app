<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.swing.Shayarana">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Firebase">
        <activity android:name="com.swing.Shayarana.lovescreen"></activity>
        <activity android:name="com.swing.Shayarana.teascreen" />
        <activity android:name="com.swing.Shayarana.birthdayscreen" />
        <activity android:name="com.swing.Shayarana.sadscreen" />
        <activity android:name="com.swing.Shayarana.loginscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.swing.Shayarana.signupscreen" />
        <activity android:name="com.swing.Shayarana.MainActivity" />
    </application>

</manifest>